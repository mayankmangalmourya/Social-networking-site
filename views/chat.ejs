<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="style/chat.css">
</head>
<body>
    <!-- -------------------------header------------------------- -->
    <nav>
        <div class="container">
            <div class="left_navabar">
                <img src="images/Logo1.png" class="images">
                <h3 id="name2">Friends.com</h3>
            </div> 
             <div class="search_bar">
                  <i class="uil uil-search"></i>
                  <input type="search" placeholder="Search For a Friend">
             </div>
             <!-- ----------------------------------------changes----------------------------------------------------------- -->
             <div class="mid">
                <button>
                    <a href="/request" >Request</a>
                </button>&nbsp&nbsp
                <button>
                    <a href="/suggestions" id="butn">Suggestions</a>
                </button>
            </div>
            <!-- ---------------------------------------------changes----------------------------------------------------------------- -->
             <div class="right_navbar">
                 <li><a href="/home" class="btn"><i class="uil uil-home" ></i></a></li>
                 <li><a href="/upload" class="btn"><i class="uil uil-plus" > </i></a></li>
                 <li><a href="#" class="btn active"><i class="uil uil-chat" ></i></a></li>
                 <li><a href="/profile" class="btn"><img src="images/man.png" alt="" class="images" id="profile"></a></li>
                 <li><a href="/logout" class="btn"><i class="uil uil-exit"></i></a></li>
            </div>
        </div>
    </nav>
    <main>
        <div class="container">
            <div class="left">
                <div style="background-color: blueviolet; width: 800px; height: 70px; border-radius: 10px;">
                    <div class="search_bar">
                        <i class="uil uil-search"></i>
                        <input type="search" placeholder="Search For a Friend">
                    </div>
                </div>
                <div class="friendlist">
                    <% friendlist.forEach((item)=>{%>
<form action="/tofriend" method="post">
                    <button class="head" value="<%= item.userid %>" type="submit" name="friendID"> 
                        <div>
                           <img src="images/man.png" alt="" class="images">&nbsp;
                        </div>
                        <div>
                           <h3 style="padding: 5px; margin-top: 3px; cursor:pointer;  ">
                            <%= item.fullname %>                            
                        </h3>
                        <!-- &nbsp;   <span style="margin-left: 3px;"><%=item.message%></span> -->
                        </div>
                    </button>
                </form>
                    <%});%>
                   
                    
                </div>
            </div>
            <div class="right">
                 <div class="userheader">
                    <div class="Upperblock">
                        <div>
                            <img src="<%= friend.image %> " alt="" class="images" style="margin-left: 5px; height: 50px; width: 50px;">
                        </div>
                        <div id="userinfo">
                            <h3><%= friend.fullname %> </h3>       <!--touser-->
                            <span style="color: white; margin-top: -30px;">Status : active</span>
                        </div>
                    </div>
                    <div class="msg_section">
                        <% chatlist.forEach((item)=>{%>
                            <% if(item.toUser === Username){ %>
                                <div class="mymsg msguser">
                                    <p><%=item.message%><br><span><%=item.tmstp%></span></p>
                                </div>
                            <% } else{ %>  
                                <div class="mymsg msgme">
                                    <p><%=item.message%><br><span><%=item.tmstp%></span></p>
                                </div>
                            <% } %>
                        <%});%>
                       <div class="lowerblock">
                        <form action="/message" method="post">
                            <input type="text" placeholder="Type Message Here...." id="lowerblocktext" name="baat" required>
                            <button type="submit" id="click">Send</button>
                        </form>
                    </div>
                 </div>
            </div>
        </div>
    </main>
</body>
</html>