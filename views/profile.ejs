            <div style="font-size: 25px; text-align: center">
              <span><%=Name%></span>
            </div>
            <div style="text-align: center; font-size: 20px">
              <span><%=Username%></span>
            </div>
            <div
              style="
                margin-left: auto;
                margin-right: auto;
                font-size: 25px;
                display: flex;
                grid-template-columns: auto 120px;
                column-gap: 10rem;
                margin-left: 100px;
                padding: 10px;
              "
            >
              <div id="Friends" action="/profile">
                <a href="/friendlist">Friends : <%=friends%></a>
              </div>
              <div id="Posts" action="/profile">Post : <%=posts%></div>
            </div>
            <div
              style="
                background-color: cadetblue;
                height: 220px;
                width: 570px;
                margin-left: 15px;
                border-radius: 30px;
                display: flex;
                flex-wrap: wrap;
                overflow-y: auto;
                padding: 5px;
              "
