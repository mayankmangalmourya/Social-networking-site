    <nav>
      <div class="container">
        <div class="left_navabar">
          <img src="images/Logo1.png" class="images" />
          <h3 id="name2">Friends.com</h3>
        </div>
        <div class="search_bar">
          <i class="uil uil-search"></i>
          <input type="search" placeholder="Search For a Friend" />
        </div>
        <!-- ----------------------------------------changes----------------------------------------------------------- -->
        <div class="mid">
          <button>
            <a href="/request">Request</a></button
          >&nbsp&nbsp
          <button>
            <a href="/suggestions" id="butn">Suggestions</a>
          </button>
        </div>
        <!-- ---------------------------------------------changes----------------------------------------------------------------- -->
        <div class="right_navbar">
          <li>
            <a href="/home" class="btn"><i class="uil uil-home"></i></a>
          </li>
          <li>
            <a href="/upload" class="btn"><i class="uil uil-plus"> </i></a>
          </li>
          <li>
            <a href="/chat" class="btn"><i class="uil uil-chat"></i></a>
          </li>
          <li>
            <a href="" class="btn active"
              ><img src="images/man.png" alt="" class="images" id="profile"
            /></a>
          </li>
          <li>
            <a href="/logout" class="btn"><i class="uil uil-exit"></i></a>
          </li>
        </div>
      </div>
    </nav>

